<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jinliyu.shoppingapp_1.activity.ProductDetailActivity">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/proimage"
        android:layout_width="245dp"
        android:layout_height="204dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/proprice"
        android:textColor="@color/pricecolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:paddingTop="7dp"
        android:layout_marginLeft="5dp"
        android:tooltipText="5dp"
        android:text="price"
        android:textSize="20dp"
        />
</LinearLayout>

    <TextView
        android:id="@+id/proname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="productname"
        android:textColor="@color/productTitle"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/qtxt"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="quantity" />


    <Button
        android:id="@+id/addtocartbtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/orangebtn"
        android:textColor="@color/white"
        android:text="Add to Cart"
        />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
    android:text="Description: "
        android:textColor="#008bb9"
    />


    <TextView
        android:id="@+id/prodesc"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="description"
        android:textSize="18dp"
        />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Ratings and Reviews: "
        android:textColor="#008bb9"
        />
    <TextView
        android:id="@+id/prorating"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RatingRatingRatingRatingRatingRatingRatingRatingRatingRatingRatingRatingRatingRatingRatingRatingRatingRatingRatingRatingRatingRatingRatingRating"
        android:textSize="18dp"
        />


</LinearLayout>
    </ScrollView>
</RelativeLayout>
